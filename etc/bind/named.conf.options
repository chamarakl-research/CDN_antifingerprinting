acl allowed_clients {
        localhost;
        10.42.0.0/24;
};

options {
        directory "/var/cache/bind";

        forwarders {
                8.8.8.8;
                8.8.4.4;
        };
        recursion yes;
        allow-query { allowed_clients; };
        forward only;

        dnssec-validation auto;

        auth-nxdomain no;    # conform to RFC1035
        listen-on-v6 { fe80::e25f:59e2:e2ff:83bc; };
        listen-on { 10.42.0.1; };
};
